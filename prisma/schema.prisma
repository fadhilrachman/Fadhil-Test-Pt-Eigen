generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User{
  id String @id @default(uuid())
  name String
  code String
  password String
  token String?
  role RoleUser
  borowingBook BorowingBook[]
}

model Book{
  id String @id @default(uuid())
  title String
  code String
  stok Int
  author String
  borowingBook BorowingBook[]
}


model BorowingBook{
  id String @id @default(uuid())
  start_date Int
  due_date String

  idUser String
  user User @relation(fields: [idUser], references: [id])

  idBook String
  book Book @relation(fields: [idBook], references: [id])
}

enum RoleUser{
  admin
  customer
}